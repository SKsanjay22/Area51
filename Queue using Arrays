#include <stdio.h>
#include <conio.h>
#include <stdlib.h>

#define MAX 5
static int queue[MAX];
int front = -1;
int rear = -1;

void insert(int x)
{
    if (rear == MAX - 1)
    {
        printf("\nQueue Overflow\n");
        return;
    }

    if (front == -1)
        front = 0;

    queue[++rear] = x;
}

int dequeue()
{
    int val;

    if (front == -1)
    {
        printf("\nQueue Underflow\n");
        return -1;
    }

    val = queue[front];

    if (front == rear)
        front = rear = -1;
    else
        front++;

    return val;
}

void view()
{
    int i;
    if (front == -1)
        printf("\nQueue Empty\n");
    else
    {
        printf("\nFront --> ");
        for (i = front; i <= rear; i++)
            printf("%4d", queue[i]);
        printf(" <-- Rear\n");
    }
}

void main()
{
    int ch = 0, val;
    clrscr();

    while (ch != 4)
    {
        clrscr();
        printf("\nQUEUE OPERATIONS\n");
        printf("1. INSERT\t");
        printf("2. DELETE\t");
        printf("3. VIEW\t");
        printf("4. QUIT\n");
        printf("\nEnter Choice : ");
        scanf("%d", &ch);

        switch (ch)
        {
        case 1:
            printf("\nEnter element to be inserted : ");
            scanf("%d", &val);
            insert(val);
            break;

        case 2:
            val = dequeue();
            if (val != -1)
                printf("\nElement deleted : %d\n", val);
            break;

        case 3:
            view();
            break;

        case 4:
            exit(0);

        default:
            printf("\nInvalid Choice\n");
        }

        getch(); // wait for key press
    }
}