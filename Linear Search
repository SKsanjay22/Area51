#include <stdio.h>

int main() {
    int array[100], n, i, key, found = 0;

    // Input array size
    do {
        printf("Enter number of elements in array (max 100): ");
        scanf("%d", &n);
        if(n <= 0 || n > 100)
            printf("Invalid size. Please enter a number between 1 and 100.\n");
    } while(n <= 0 || n > 100);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &array[i]);
    }

    // Input element to search
    printf("Enter the element to search: ");
    scanf("%d", &key);

    // Linear Search (find all occurrences)
    for(i = 0; i < n; i++) {
        if(array[i] == key) {
            printf("Element found at position %d (index %d)\n", i + 1, i);
            found = 1;
        }
    }

    if(!found) {
        printf("Element not found in the array.\n");
    }

    return 0;
}